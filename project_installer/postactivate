# This hook is run after this virtualenv is activated.
# project specific settings.
export PROJECT_BASE_PATH="/Users/felixplitzko/Documents/work/libermentix/"
export PROJECT_NAME="medivalk"
#export PROJECT_WEBAPP_NAME="web$PROJECT_NAME"
export PROJECT_PATH="$PROJECT_BASE_PATH$PROJECT_NAME"

echo "virtual environment for application in project path: $PROJECT_PATH"

#extend python path
EXTENSION=""
if [ -n "$PYTHONPATH" ] ; then
	OLD_PYTHON_PATH="$PYTHONPATH"
	export OLD_PYTHON_PATH
	EXTENSION=":${OLD_PYTHON_PATH}"
fi
export PYTHONPATH=${PROJECT_PATH}${EXTENSION}

#Database
export DB_ENGINE='django.db.backends.postgresql_psycopg2'
export DB_NAME="%(postgres_db)"
export DB_PW="%(postgres_pw)"
export DB_USER="%(postgres_user)"
export DB_HOST='localhost'
export DB_PORT=''

#django
export DJANGO_SETTINGS_MODULE="settings.base"
export DJANGO_SECRET_KEY='%(django_secret_key)'
export DJANGO_DEBUG='True'
export DJANGO_MEDIA_URL='http://%(django_media_url)/'
export DJANGO_STATIC_URL='http://%(django_static_url)/'
export DJANGO_WEBSITE_URL='http://%(django_website_url)'


